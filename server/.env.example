# ============================================
# AGORA PLATFORM - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================
# For local development: use localhost
# For production: use your managed database host (PlanetScale, Railway, etc.)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=agora_platform

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# JWT SECRETS (REQUIRED FOR AUTH)
# ============================================
# Generate secure random strings for production
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production

# ============================================
# FRONTEND ORIGIN (CORS)
# ============================================
# Allow requests from your frontend domain
# For local development:
FRONTEND_ORIGIN=http://localhost:3000

# For production with GitHub Pages:
# FRONTEND_ORIGIN=https://sparsh2321084.github.io

# For production with custom domain:
# FRONTEND_ORIGIN=https://your-domain.com

# ============================================
# OPTIONAL: AI FEATURES
# ============================================
# Uncomment and add your OpenAI API key to enable AI features
# ENABLE_AI=true
# OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# OPTIONAL: REDIS (for session storage)
# ============================================
# If using Redis for sessions in production
# REDIS_URL=redis://your-redis-host:6379

# ============================================
# PRODUCTION EXAMPLE (Render + PlanetScale)
# ============================================
