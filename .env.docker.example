# Environment variables for Docker Compose
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=db
DB_USER=agora_user
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
DB_ROOT_PASSWORD=CHANGE_THIS_TO_SECURE_ROOT_PASSWORD
DB_NAME=agora_platform

# Frontend Configuration (your VM public IP or domain)
FRONTEND_ORIGIN=http://YOUR_VM_IP_HERE

# For production with domain and SSL:
# FRONTEND_ORIGIN=https://yourdomain.com

# Example for Oracle Cloud:
# FRONTEND_ORIGIN=http://129.146.123.45
# or
# FRONTEND_ORIGIN=https://agora-platform.com
